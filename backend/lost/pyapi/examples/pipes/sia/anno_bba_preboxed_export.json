{
  "description": "This pipeline selects all images of an rawFile and request bbox annotations with some dummy boxes and creates an json export.",
  "author": "Jonas Jaeger",
  "pipe-schema-version" : 0.0,
  "elements": [{
      "peN": 0,
      "peOut": [1],
      "datasource": {
        "type": "rawFile"
      }
    },
    {
      "peN": 1,
      "peOut": [2],
      "script": {
        "path": "request_bba_preboxed.py",
        "description": "Request BBoxAnnotations for all images in an rawFile. Create also some dummy boxes."
      }
    },
    {
      "peN": 2,
      "peOut": [3],
      "annoTask": {
        "name": "BBoxAnnotation",
        "type": "sia",
        "instructions": "Please draw bounding boxes for all objects in image.",
        "configuration": {
          "tools": {
            "point": false,
            "line": false,
            "polygon": false,
            "bbox": true
          },
          "actions": {
            "drawing": true,
            "labeling": false,
            "edit": {
              "label": false,
              "bounds": true,
              "delete": true
            }
          },
          "drawables": {
            "bbox": {
              "minArea": 0.001234,
			  "minAreaType": "rel"
            }
          }
        }
      }
    },
    {
      "peN": 3,
      "peOut": [4],
      "script": {
        "path": "export_bbox_json.py",
        "description": "Export all BBoxAnnotations to a json file.",
        "arguments": {
          "file_name": {
            "value": "BBA_annos.json",
            "help": "Name of the file to export"
          }
        }
      }
    },
    {
      "peN": 4,
      "peOut": null,
      "dataExport": {}
    }
  ]
}