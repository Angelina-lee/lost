{
  "author" : "Jonas Jaeger",
  "description" : "Annotate all images in a folder with the MIA annotation tool.",
  "pipe-schema-version" : 0.0,
  "elements" : [
    {
      "peN" : 0,
      "peOut" : [1],
      "datasource" : {
        "type" : "rawFile"
      }
    },
    {
      "peN" : 1,
      "peOut" : [2],
      "script" : {
        "path": "anno_all_imgs.py",
        "description" : "Request ImageAnnotations for all images in an rawFile"
      }
    },
    {
      "peN": 2,
      "peOut": null,
      "annoTask": {
        "name": "SIA Annotation Task",
        "type": "sia",
        "instructions": "Please draw annotations for all objects in image.",
        "configuration": {
          "tools": {
            "point": true,
            "line": true,
            "polygon": true,
            "bbox": true
          },
          "actions": {
            "drawing": true,
            "labeling": true,
            "edit": {
              "label": true,
              "bounds": true,
              "delete": true
            }
          },
          "drawables": {
            "bbox": {
              "minArea": 0.001234
            }
          }
        }
      }
    }
  ]
}
